{
  "name": "commit-intent-detector",
  "displayName": "CommiTect â€“ Smart Commit Name Suggestion",
  "description": "Automatically analyzes your code and suggests a clear, professional commit name (Bug Fix, Feature, Refactor, Docs, Tests) using an external backend API.",
  "version": "1.2.0",
  "galleryBanner": {
    "color": "#001d3d",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "git",
    "commit",
    "commit-message",
    "commit-helper",
    "automation",
    "productivity",
    "source-control",
    "developer-tools",
    "git-workflow",
    "ai-assistant"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commitect.generateCommitMessage",
        "title": "CommiTect: Generate Commit Message",
        "category": "Git",
        "icon": "$(git-commit)"
      }
    ],
    "configuration": {
      "title": "CommiTect Configuration",
      "properties": {
        "commitIntentDetector.apiUrl": {
          "type": "string",
          "default": "http://commitintentdetector.runasp.net/api/Commit/analyze",
          "description": "The URL of the backend API endpoint for commit analysis"
        },
        "commitIntentDetector.timeout": {
          "type": "number",
          "default": 30000,
          "description": "Timeout in milliseconds for API requests",
          "minimum": 1000,
          "maximum": 300000
        },
        "commitIntentDetector.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable CommiTect"
        },
        "commitIntentDetector.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show status bar button for generating commit messages"
        },
        "commitIntentDetector.allowInsecureSSL": {
          "type": "boolean",
          "default": false,
          "description": "Allow insecure SSL certificates (development only). Disables SSL certificate verification."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1"
  },
  "dependencies": {
    "node-fetch": "^3.3.2",
    "undici": "^6.0.0"
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mohammed-3tef/CommiTect_VSCode.git"
  },
  "author": "Mohammed Atef",
  "license": "MIT",
  "publisher": "MohammedAtef",
  "markdown": "github",
  "icon": "public/icon512.png",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/Mohammed-3tef/CommiTect_VSCode/issues"
  },
  "homepage": "https://github.com/Mohammed-3tef/CommiTect_VSCode#readme"
}